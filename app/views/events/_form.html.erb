<%= form_for @event do |f| %>
  <%= label_tag(:title, "Title") %>
  <%= f.text_field :title %><br>
  <%= label_tag(:description, "Description") %><br>
  <%= f.text_area :description %><br>
  <%= label_tag(:start, "Start") %>
  <%= f.datetime_select :start %><br>
  <%= label_tag(:end, "End") %>
  <%= f.datetime_select :end %><br>
  <%= label_tag(:photo_file, "Photo") %>
  <%= f.file_field :photo_file %><br>
  <%= f.submit %>

<% end %>